<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.marlabs">
<class name="Employee" table="employee">
<meta attribute="class-description">
This class contains the employee detail.
</meta>
<cache usage="read-write"/>

<id name="empNum" type="int" column="empNum">
</id>


<property name="empFName" column="empFName" type="string"/>
<property name="empLName" column="empLName" type="string"/>
<property name="empDesg" column="empDesg" type="string"/>
<property name="empDept" column="empDept" type="int"/>
<property name="sal" column="salary" type="double"/>
</class>
</hibernate-mapping>